TARGET = $(shell "${R_HOME}/bin${R_ARCH_BIN}/Rscript" -e "cat(cargo::target())")
$(info Rust target: $(TARGET))

LIBDIR = rustlib/target/$(TARGET)/release
STATLIB = $(LIBDIR)/rustlib.lib
PKG_LIBS = -L$(LIBDIR) -lrustlib -lws2_32 -ladvapi32 -luserenv -lbcrypt

all: clean

$(SHLIB): $(STATLIB)

$(STATLIB):
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript" ../tools/staticlib.R "$(TARGET)"

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS)
